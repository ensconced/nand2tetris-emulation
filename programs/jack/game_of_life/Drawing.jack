class Drawing {
  function void draw_from_compact_representation(int buffer) {
    var int screen, word_idx, offset;

    let screen = 18432;
    let word_idx = 0;
    let offset = 0;
    while (word_idx < 32) {
      let screen[offset] = buffer[word_idx];
      let screen[offset + 1] = buffer[word_idx + 1];
      let word_idx = word_idx + 2;
      let offset = offset + 32;
    }
  }
}
