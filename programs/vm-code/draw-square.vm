function Sys.init 0
  call draw_square 0
  pop constant 0
  return

function draw_square 1
  push constant 16384
  pop pointer 0 // THIS is screen

  push constant 0
  pop local 0 // row_idx

  label start_loop
    // draw line
    push constant 0
    not
    pop this 0

    push pointer 0
    push constant 32
    add
    pop pointer 0

    // row_idx++
    push local 0
    push constant 1
    add
    pop local 0

    push local 0
    push constant 16
    lt
    if-goto start_loop

  push constant 0
  return
